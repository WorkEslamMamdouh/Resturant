                        <div class="col-lg-2 pad_"><label class=" style_pading_lepel "> الرقم المرجعي </label></div>
                        <div class="col-lg-1 pad_"><label class="  style_pading_lepel"> البركود الثابت </label></div>
                        <div class="col-lg-1 pad_"><label class=" style_pading_lepel "> الرقم التسلسلي </label></div>
                        
                    </div> 
                    <div class="row " id="div_Data">
                    </div>
                    <span id="btnAddDetails" class="glyphicon glyphicon-plus-sign  display_none"></span>

                </div>

            </div>

            </div>








    </div>


</div>


